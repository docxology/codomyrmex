{
  "logging": {
    "level": "INFO",
    "file": "logs/plugin_system_example.log",
    "output_type": "TEXT"
  },
  "output": {
    "format": "json",
    "file": "output/plugin_system_results.json"
  },
  "plugin_system": {
    "discovery": {
      "enabled": true,
      "auto_discover": true,
      "plugin_directories": [
        "./plugins",
        "./custom_plugins"
      ]
    },
    "validation": {
      "enabled": true,
      "auto_validate": true,
      "strict_mode": false,
      "security_checks": true,
      "dependency_checks": true
    },
    "loading": {
      "parallel_loading": true,
      "max_concurrent_loads": 3,
      "timeout_seconds": 30,
      "fail_fast": false
    },
    "lifecycle": {
      "auto_enable": true,
      "auto_disable_on_error": true,
      "cleanup_on_shutdown": true
    },
    "hooks": {
      "enabled": true,
      "max_handlers_per_hook": 10,
      "timeout_seconds": 5
    }
  },
  "plugin_configs": {
    "analysis_tool": {
      "max_concurrent_operations": 5,
      "output_format": "json",
      "enable_caching": true
    },
    "visualization_helper": {
      "supported_formats": ["png", "svg", "pdf"],
      "default_resolution": 300,
      "color_scheme": "default"
    },
    "utility_processor": {
      "batch_size": 100,
      "retry_attempts": 3,
      "enable_metrics": true
    }
  },
  "example_plugins": {
    "analysis_tool": {
      "type": "analysis",
      "priority": "high",
      "dependencies": [],
      "capabilities": ["data_analysis", "metrics", "reporting"]
    },
    "visualization_helper": {
      "type": "visualization",
      "priority": "medium",
      "dependencies": ["analysis_tool"],
      "capabilities": ["charts", "graphs", "diagrams"]
    },
    "utility_processor": {
      "type": "utility",
      "priority": "low",
      "dependencies": [],
      "capabilities": ["data_processing", "file_operations", "formatting"]
    }
  }
}
