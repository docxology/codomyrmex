{
  "rest_api": {
    "title": "Codomyrmex API",
    "version": "1.0.0",
    "description": "Comprehensive API demonstration with REST endpoints",
    "base_path": "/api/v1",
    "endpoints": [
      {
        "path": "/users",
        "method": "GET",
        "description": "Get all users",
        "responses": {
          "200": {
            "description": "List of users",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {"type": "integer"},
                  "name": {"type": "string"},
                  "email": {"type": "string"}
                }
              }
            }
          }
        }
      },
      {
        "path": "/users",
        "method": "POST",
        "description": "Create a new user",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {"type": "string"},
                "email": {"type": "string"}
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User created successfully"
          }
        }
      },
      {
        "path": "/users/{user_id}",
        "method": "GET",
        "description": "Get user by ID",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "User data"
          }
        }
      }
    ]
  },
  "graphql_api": {
    "enable_graphiql": true,
    "enable_introspection": true,
    "schema": {
      "types": [
        {
          "name": "User",
          "description": "User object type",
          "fields": {
            "id": {"type": "Int!", "description": "User ID"},
            "name": {"type": "String!", "description": "User name"},
            "email": {"type": "String!", "description": "User email address"}
          }
        },
        {
          "name": "Query",
          "description": "Root query type",
          "fields": {
            "user": {
              "type": "User",
              "args": {"id": {"type": "Int"}},
              "description": "Get user by ID"
            },
            "users": {
              "type": "User",
              "description": "Get all users"
            }
          }
        }
      ]
    },
    "sample_queries": [
      {
        "name": "get_user",
        "query": "query GetUser($id: Int) { user(id: $id) { id name email } }",
        "variables": {"id": 1}
      },
      {
        "name": "get_users",
        "query": "query GetUsers { users { id name email } }",
        "variables": {}
      }
    ]
  },
  "api_versioning": {
    "current_version": "1.0.0",
    "format": "semver",
    "versions": [
      {
        "version": "1.0.0",
        "release_date": "2025-01-01",
        "description": "Initial API release",
        "breaking_changes": false
      },
      {
        "version": "1.1.0",
        "release_date": "2025-02-01",
        "description": "Added user preferences endpoint",
        "breaking_changes": false
      },
      {
        "version": "2.0.0",
        "release_date": "2025-04-01",
        "description": "Major API restructuring",
        "breaking_changes": true,
        "migration_guide": "See migration documentation"
      },
      {
        "version": "2.1.0",
        "release_date": "2025-05-01",
        "description": "Performance improvements",
        "breaking_changes": false
      }
    ],
    "migrations": [
      {
        "from_version": "1.0.0",
        "to_version": "2.0.0",
        "migration_function": "migrate_user_data_v1_to_v2",
        "description": "Migrate user data structure"
      }
    ]
  },
  "openapi": {
    "title": "Codomyrmex API",
    "version": "1.0.0",
    "description": "Auto-generated OpenAPI specification",
    "terms_of_service": "https://codomyrmex.dev/terms",
    "contact": {
      "name": "Codomyrmex Support",
      "url": "https://codomyrmex.dev/support",
      "email": "support@codomyrmex.dev"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    },
    "servers": [
      {
        "url": "https://api.codomyrmex.dev/v1",
        "description": "Production server"
      },
      {
        "url": "https://staging-api.codomyrmex.dev/v1",
        "description": "Staging server"
      },
      {
        "url": "http://localhost:8000/v1",
        "description": "Development server"
      }
    ],
    "security_schemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key"
      },
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "testing": {
    "enable_mock_data": true,
    "mock_users": [
      {"id": 1, "name": "Alice Johnson", "email": "alice@example.com"},
      {"id": 2, "name": "Bob Smith", "email": "bob@example.com"},
      {"id": 3, "name": "Charlie Brown", "email": "charlie@example.com"}
    ]
  },
  "performance": {
    "rate_limiting": {
      "requests_per_minute": 60,
      "burst_limit": 10
    },
    "caching": {
      "enabled": true,
      "ttl_seconds": 300
    }
  },
  "monitoring": {
    "enable_metrics": true,
    "metrics_endpoint": "/metrics",
    "health_check_endpoint": "/health"
  },
  "output": {
    "format": "json",
    "file": "output/api_standardization_results.json",
    "include_openapi_spec": true,
    "include_test_results": true,
    "include_performance_metrics": false
  },
  "logging": {
    "level": "INFO",
    "file": "logs/api_standardization_example.log",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  "demo": {
    "enable_rest_api_demo": true,
    "enable_graphql_demo": true,
    "enable_versioning_demo": true,
    "enable_openapi_demo": true,
    "simulate_real_responses": false
  }
}
