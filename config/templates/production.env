# Codomyrmex Production Environment Configuration
# IMPORTANT: Never commit this file with real API keys or secrets

# Logging Configuration
CODOMYRMEX_LOG_LEVEL=INFO
CODOMYRMEX_LOG_FILE=/var/log/codomyrmex/codomyrmex.log
CODOMYRMEX_DEBUG=false

# LLM API Keys (required for AI features)
# IMPORTANT: Use secure secret management in production
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
GOOGLE_API_KEY=${GOOGLE_API_KEY}

# Production Settings
CODOMYRMEX_DEV_MODE=false
CODOMYRMEX_AUTO_RELOAD=false

# Performance Settings
CODOMYRMEX_CACHE_ENABLED=true
CODOMYRMEX_PERFORMANCE_MONITORING=true

# Database Configuration
DATABASE_URL=${DATABASE_URL}

# External Services
REDIS_URL=${REDIS_URL}
ELASTICSEARCH_URL=${ELASTICSEARCH_URL}

# Security (production hardened settings)
CODOMYRMEX_SECRET_KEY=${CODOMYRMEX_SECRET_KEY}
CODOMYRMEX_CORS_ORIGINS=${CODOMYRMEX_CORS_ORIGINS}

# Monitoring and Telemetry
CODOMYRMEX_TELEMETRY_ENABLED=true
CODOMYRMEX_METRICS_PORT=9090

# Health Check
CODOMYRMEX_HEALTH_CHECK_PATH=/health

# Rate Limiting
CODOMYRMEX_RATE_LIMIT_PER_MINUTE=100
CODOMYRMEX_RATE_LIMIT_BURST=20

# SSL/TLS (if using HTTPS)
CODOMYRMEX_SSL_CERT_PATH=${CODOMYRMEX_SSL_CERT_PATH}
CODOMYRMEX_SSL_KEY_PATH=${CODOMYRMEX_SSL_KEY_PATH}
